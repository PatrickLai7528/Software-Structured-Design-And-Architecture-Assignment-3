<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.BookEntity" table="book" schema="librarydb">
        <id name="bid">
            <column name="bid" sql-type="int(11)"/>
        </id>
        <property name="bname">
            <column name="bname" sql-type="varchar(255)"/>
        </property>
        <property name="description">
            <column name="description" sql-type="varchar(255)"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="int(11)"/>
        </property>
        <property name="remainquantity">
            <column name="remainquantity" sql-type="int(11)"/>
        </property>
        <property name="finerate">
            <column name="finerate" sql-type="double" precision="-1"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)" />
        </property>
    </class>
</hibernate-mapping>