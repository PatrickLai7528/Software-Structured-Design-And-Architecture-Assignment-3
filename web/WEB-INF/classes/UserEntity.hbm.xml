<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.UserEntity" table="user" schema="librarydb">
        <id name="userid">
            <column name="userid" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(255)"/>
        </property>
        <property name="type">
            <column name="type" sql-type="varchar(255)"/>
        </property>
        <property name="department">
            <column name="department" sql-type="varchar(255)"/>
        </property>
        <property name="sex">
            <column name="sex" sql-type="varchar(255)"/>
        </property>
        <property name="maxborrownum">
            <column name="maxborrownum" sql-type="int(11)" />
        </property>
        <property name="nowborrownum">
            <column name="nowborrownum" sql-type="int(11)" />
        </property>
    </class>
</hibernate-mapping>